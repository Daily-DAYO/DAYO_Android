<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_folder_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="#C4C4C4"/>

    <ImageButton
        android:id="@+id/btn_folder_back"
        android:layout_width="9dp"
        android:layout_height="18dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back_sign_white"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="18dp"/>

    <ImageButton
        android:id="@+id/btn_folder_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_search_white"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_1_313131"
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/img_folder_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="movie"/>

    <TextView
        android:id="@+id/tv_folder_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_3_9C9C9C"
        android:textSize="11dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_folder_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="영화기록노트"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_folder_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="8dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_folder_subheading"
        tools:listitem="@layout/item_folder_post" />

</androidx.constraintlayout.widget.ConstraintLayout>