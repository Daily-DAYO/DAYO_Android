<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.FolderAddFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post_folder_add_action_bar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:elevation="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_post_folder_add_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textSize="14dp"
            android:textColor="@color/gray_1_313131"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="18dp"/>
        <TextView
            android:id="@+id/tv_post_folder_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_folder_add_title"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="@id/tv_post_folder_add_back"
            app:layout_constraintBottom_toBottomOf="@id/tv_post_folder_add_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_post_folder_add_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/confirm"
            android:textSize="14dp"
            android:textColor="@color/gray_1_313131"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/tv_post_folder_add_back"
            app:layout_constraintBottom_toBottomOf="@id/tv_post_folder_add_back"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_post_folder_add_actionbar_horizontal_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_4_D3D2D2"
        app:layout_constraintTop_toBottomOf="@id/layout_post_folder_add_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post_folder_add_set_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_post_folder_add_actionbar_horizontal_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:id="@+id/tv_post_folder_add_set_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_folder_add_set_title"
            android:textSize="13dp"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:id="@+id/et_post_folder_add_set_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/hint_post_folder_add_set_title"
            android:textSize="16dp"
            android:textColor="@color/gray_1_313131"
            android:textColorHint="@color/gray_4_D3D2D2"
            app:layout_constraintTop_toBottomOf="@id/tv_post_folder_add_set_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="19dp"/>
        <View
            android:id="@+id/view_post_folder_add_set_title_horizontal_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_4_D3D2D2"
            app:layout_constraintTop_toBottomOf="@id/et_post_folder_add_set_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post_folder_add_set_private"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_post_folder_add_set_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:id="@+id/tv_post_folder_add_set_private_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_folder_add_set_private_title"
            android:textSize="13dp"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <RadioGroup
            android:id="@+id/radiogroup_post_folder_add_set_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_post_folder_add_set_private_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp">
            <RadioButton
                android:id="@+id/radiobutton_post_folder_add_set_private_all"
                android:layout_width="78.4dp"
                android:layout_height="29dp"
                android:text="@string/post_folder_add_set_private_all"
                android:textSize="12dp"
                android:textColor="@drawable/selector_button_write_option_private_text"
                android:textAlignment="center"
                android:background="@drawable/selector_button_write_option_private"
                android:button="@null"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:checked="true"
                android:id="@+id/radiobutton_post_folder_add_set_private_following"
                android:layout_width="78.4dp"
                android:layout_height="29dp"
                android:text="@string/post_folder_add_set_private_following"
                android:textSize="12dp"
                android:textColor="@drawable/selector_button_write_option_private_text"
                android:textAlignment="center"
                android:background="@drawable/selector_button_write_option_private"
                android:button="@null"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:id="@+id/radiobutton_post_folder_add_set_private_only_me"
                android:layout_width="78.4dp"
                android:layout_height="29dp"
                android:text="@string/post_folder_add_set_private_only_me"
                android:textSize="12dp"
                android:textColor="@drawable/selector_button_write_option_private_text"
                android:textAlignment="center"
                android:background="@drawable/selector_button_write_option_private"
                android:button="@null"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>