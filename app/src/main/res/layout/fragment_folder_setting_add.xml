<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="profile.FolderSettingAddFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_folder_setting_add_action_bar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:elevation="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/btn_folder_setting_add_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_sign"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="18dp"/>
        <TextView
            android:id="@+id/tv_folder_setting_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_folder_add_title"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="@id/btn_folder_setting_add_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_folder_setting_add_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_folder_setting_add_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="완료"
            android:textSize="14dp"
            android:textColor="@color/gray_1_313131"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/btn_folder_setting_add_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_folder_setting_add_back"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_folder_setting_add_actionbar_horizontal_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_4_D3D2D2"
        app:layout_constraintTop_toBottomOf="@id/layout_folder_setting_add_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_folder_setting_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_folder_thumbnail_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_folder_setting_add_actionbar_horizontal_line"
        app:shapeAppearanceOverlay="@style/roundedImageViewRoundedCorner" />

    <TextView
        android:id="@+id/tv_folder_setting_add_set_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커버 이미지를 등록해주세요"
        android:textSize="12dp"
        android:textColor="@color/gray_4_D3D2D2"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/iv_folder_setting_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        android:id="@+id/view_folder_setting_add_set_thumbnail_horizontal_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_5_F6F6F6"
        app:layout_constraintTop_toBottomOf="@id/tv_folder_setting_add_set_thumbnail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_folder_setting_add_set_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_folder_setting_add_set_thumbnail_horizontal_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:id="@+id/tv_folder_setting_add_set_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_setting_add_set_title"
            android:textSize="13dp"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/et_folder_setting_add_set_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/hint_folder_setting_add_set_title"
            android:textSize="16dp"
            android:textColor="@color/gray_1_313131"
            android:textColorHint="@color/gray_4_D3D2D2"
            app:layout_constraintTop_toBottomOf="@id/tv_folder_setting_add_set_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="19dp"/>

        <TextView
            android:id="@+id/tv_folder_setting_add_title_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/gray_4_D3D2D2"
            app:layout_constraintTop_toBottomOf="@id/et_folder_setting_add_set_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            tools:text="0 / 10"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_folder_setting_add_set_subheading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_folder_setting_add_set_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:id="@+id/tv_folder_setting_add_set_subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_setting_add_set_subheading"
            android:textSize="13dp"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/et_folder_setting_add_set_subheading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/hint_folder_setting_add_set_subheading"
            android:textSize="16dp"
            android:textColor="@color/gray_1_313131"
            android:textColorHint="@color/gray_4_D3D2D2"
            app:layout_constraintTop_toBottomOf="@id/tv_folder_setting_add_set_subheading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="19dp"/>

        <TextView
            android:id="@+id/tv_folder_setting_add_subheading_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/gray_4_D3D2D2"
            app:layout_constraintTop_toBottomOf="@id/et_folder_setting_add_set_subheading"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            tools:text="0 / 20"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_folder_setting_add_set_private"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_folder_setting_add_set_subheading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:id="@+id/tv_folder_setting_add_set_private_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_setting_add_set_private"
            android:textSize="13dp"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <RadioGroup
            android:id="@+id/radiogroup_folder_setting_add_set_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_folder_setting_add_set_private_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp">
            <RadioButton
                android:id="@+id/radiobutton_folder_setting_add_set_private_all"
                android:layout_width="78.4dp"
                android:layout_height="29dp"
                android:text="@string/post_folder_add_set_private_all"
                android:textSize="12dp"
                android:textColor="@drawable/selector_button_write_option_private_text"
                android:textAlignment="center"
                android:background="@drawable/selector_button_write_option_private"
                android:button="@null"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:checked="true"
                android:id="@+id/radiobutton_folder_setting_add_set_private_following"
                android:layout_width="78.4dp"
                android:layout_height="29dp"
                android:text="@string/post_folder_add_set_private_following"
                android:textSize="12dp"
                android:textColor="@drawable/selector_button_write_option_private_text"
                android:textAlignment="center"
                android:background="@drawable/selector_button_write_option_private"
                android:button="@null"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:id="@+id/radiobutton_folder_setting_add_set_private_only_me"
                android:layout_width="78.4dp"
                android:layout_height="29dp"
                android:text="@string/post_folder_add_set_private_only_me"
                android:textSize="12dp"
                android:textColor="@drawable/selector_button_write_option_private_text"
                android:textAlignment="center"
                android:background="@drawable/selector_button_write_option_private"
                android:button="@null"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>