<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/layout_swipe_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/layout_scroll_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_main_action_bar"
                    android:layout_width="0dp"
                    android:layout_height="?actionBarSize"
                    android:elevation="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <View
                        android:id="@+id/view_menu_horizontal_line"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@color/gray_5_F6F6F6"
                        />
                    <ImageButton
                        android:id="@+id/btn_post_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_search"
                        tools:ignore="ContentDescription"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_dayo_pick_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="22dp">
                        <TextView
                            android:id="@+id/tv_menu_dayo_pick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DAYO PICK"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_1_313131"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <View
                            android:id="@+id/view_menu_current_dayo_pick"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            app:layout_constraintStart_toStartOf="@+id/tv_menu_dayo_pick"
                            app:layout_constraintEnd_toEndOf="@+id/tv_menu_dayo_pick"
                            app:layout_constraintTop_toBottomOf="@id/tv_menu_dayo_pick"
                            android:layout_marginTop="2dp"
                            android:background="@color/gray_1_313131"
                            android:visibility="visible"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_new_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/layout_dayo_pick_post"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:id="@+id/tv_menu_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEW"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_4_D3D2D2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <View
                            android:id="@+id/view_menu_current_new"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            app:layout_constraintStart_toStartOf="@+id/tv_menu_new"
                            app:layout_constraintEnd_toEndOf="@+id/tv_menu_new"
                            app:layout_constraintTop_toBottomOf="@id/tv_menu_new"
                            android:layout_marginTop="2dp"
                            android:background="@color/gray_1_313131"
                            android:visibility="invisible"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs_main_category_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="scrollable"
                    app:layout_constraintTop_toBottomOf="@id/layout_main_action_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="27dp">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_main_category_post_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체"
                        />
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_main_category_post_scheduler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스케줄러"
                        />
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_main_category_post_study_planner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스터디플래너"
                        />
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_main_category_post_pocketbook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포켓북"
                        />
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_main_category_post_6hole_diary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6공 다이어리"
                        />
                </com.google.android.material.tabs.TabLayout>
<!--
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tabs_main_category_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/layout_main_action_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="27dp">
                </androidx.recyclerview.widget.RecyclerView>
                -->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_main_dayo_pick_post"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    app:layout_constraintTop_toBottomOf="@id/tabs_main_category_post"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="20dp"
                    tools:listitem="@layout/item_main_post"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>