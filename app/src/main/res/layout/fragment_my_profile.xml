<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_my_profile_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_setting"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img_my_profile_user_profile"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:src="@drawable/ic_dayo_grayscale"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_my_profile_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/btn_my_profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_edit"
        android:background="@drawable/button_profile_edit_circle"
        app:layout_constraintBottom_toBottomOf="@+id/img_my_profile_user_profile"
        app:layout_constraintEnd_toEndOf="@+id/img_my_profile_user_profile"/>

    <TextView
        android:id="@+id/tv_my_profile_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/gray_1_313131"
        app:layout_constraintTop_toBottomOf="@+id/img_my_profile_user_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="nickname"/>

    <TableLayout
        android:id="@+id/layout_my_profile_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_profile_user_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stretchColumns="0, 1, 2">
        <TableRow
            android:layout_marginBottom="9dp">
            <TextView
                android:id="@+id/tv_my_profile_post_count"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5A5A5A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="0"/>

            <TextView
                android:id="@+id/tv_my_profile_follower_count"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5A5A5A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="0"/>

            <TextView
                android:id="@+id/tv_my_profile_following_count"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5A5A5A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="0"/>
        </TableRow>

        <TableRow>
            <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_3_9C9C9C"
                    android:text="게시글"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/gray_3_9C9C9C"
                android:text="팔로워"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/gray_3_9C9C9C"
                android:text="팔로잉"/>
        </TableRow>
    </TableLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="@color/gray_3_9C9C9C"
        app:tabSelectedTextColor="@color/gray_1_313131"
        app:tabIndicatorColor="@color/gray_1_313131"
        app:tabIndicatorFullWidth="false"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@id/layout_my_profile_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성한 글"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요" />
    </com.google.android.material.tabs.TabLayout>

    <View
        android:id="@+id/view_tabs_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/tabs_my_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray_5_F6F6F6"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/view_tabs_horizontal_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>