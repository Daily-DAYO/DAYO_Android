<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_other_profile_action_bar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:elevation="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_other_profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_sign"
            tools:ignore="ContentDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="18dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/gray_5_F6F6F6"
            />

        <ImageButton
            android:id="@+id/btn_post_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_other_profile_user_profile"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:src="@drawable/ic_dayo_grayscale"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_other_profile_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_other_profile_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/gray_1_313131"
        app:layout_constraintTop_toBottomOf="@+id/img_other_profile_user_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="nickname"/>

    <TableLayout
        android:id="@+id/layout_other_profile_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_other_profile_user_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stretchColumns="0, 1, 2">
        <TableRow
            android:layout_marginBottom="9dp">
            <TextView
                android:id="@+id/tv_other_profile_post_count"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5A5A5A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="0"/>

            <TextView
                android:id="@+id/tv_other_profile_follower_count"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5A5A5A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="0"/>

            <TextView
                android:id="@+id/tv_other_profile_following_count"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5A5A5A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="0"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/gray_3_9C9C9C"
                android:text="게시글"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/gray_3_9C9C9C"
                android:text="팔로워"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/gray_3_9C9C9C"
                android:text="팔로잉"/>
        </TableRow>
    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_other_profile_follow"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:layout_marginTop="27dp"
        android:text="팔로우"
        android:background="@drawable/selector_button_other_profile_follow"
        app:layout_constraintTop_toBottomOf="@+id/layout_other_profile_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_other_profile_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_other_profile_follow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray_5_F6F6F6"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_other_profile_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_other_profile_horizontal_line"
        tools:listitem="@layout/item_profile_folder" />


</androidx.constraintlayout.widget.ConstraintLayout>