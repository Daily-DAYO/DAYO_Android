<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="userInfo"
            type="com.daily.dayo.profile.model.ResponseOtherProfile" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_other_profile_action_bar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:elevation="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_other_profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_sign"
            tools:ignore="ContentDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="18dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/gray_5_F6F6F6"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_other_profile_user_profile"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:src="@drawable/ic_dayo_circle_grayscale"
        android:layout_marginTop="17dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/layout_other_profile_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_other_profile_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/gray_1_313131"
        app:layout_constraintTop_toBottomOf="@+id/img_other_profile_user_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@{userInfo.nickname}"
        tools:text="nickname"/>

    <LinearLayout
        android:id="@+id/layout_other_profile_count"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="90dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_other_profile_user_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <LinearLayout
            android:id="@+id/layout_other_profile_post_count"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_other_profile_post_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="9dp"
                android:text="@{Integer.toString(userInfo.postCount)}"
                android:textColor="#5A5A5A"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:text="0" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/gray_3_9C9C9C"
                android:text="게시글"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_other_profile_follower_count"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_other_profile_follower_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="9dp"
                android:text="@{Integer.toString(userInfo.followerCount)}"
                android:textColor="#5A5A5A"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:text="0" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/gray_3_9C9C9C"
                android:text="팔로워"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_other_profile_following_count"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_other_profile_following_count"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:textColor="#5A5A5A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="@{Integer.toString(userInfo.followingCount)}"
                tools:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="팔로잉"
                android:textColor="@color/gray_3_9C9C9C"
                android:textSize="11dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <CheckBox
        android:id="@+id/btn_other_profile_follow"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:text="팔로우"
        android:textSize="12dp"
        android:button="@android:color/transparent"
        android:textColor="@drawable/selector_button_follow_text"
        android:background="@drawable/selector_button_follow"
        app:layout_constraintTop_toBottomOf="@+id/layout_other_profile_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="@{userInfo.follow}"/>

    <View
        android:id="@+id/view_other_profile_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_other_profile_follow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray_5_F6F6F6"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_other_profile_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_other_profile_horizontal_line"
        tools:listitem="@layout/item_profile_folder" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>