<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_post_option_mine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".post.PostOptionMineFragment"
    android:paddingBottom="18dp" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post_option_mine_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_option_default_top"
        android:backgroundTint="@color/white_FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_post_option_mine_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_option_mine_modify"
            android:textSize="14dp"
            android:textColor="@color/primary_green_23C882"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="18dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post_option_mine_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_option_default_bottom"
        android:backgroundTint="@color/white_FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/layout_post_option_mine_modify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >
        <View
            android:id="@+id/view_post_option_mine_delete_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_6_EDEDED"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_post_option_mine_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_option_mine_delete"
            android:textSize="14dp"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toBottomOf="@id/view_post_option_mine_delete_horizontal_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="21dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>