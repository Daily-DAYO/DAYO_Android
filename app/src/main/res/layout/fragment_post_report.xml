<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post_report_action_bar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:elevation="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/btn_post_report_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_sign"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="18dp"/>
        <TextView
            android:id="@+id/tv_post_report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_report_title"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="@id/btn_post_report_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_post_report_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/radiogroup_post_report_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_post_report_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radiobutton_post_report_reason_1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="18dp"
            android:text="@string/post_report_reason_1"
            android:textSize="14dp"
            android:layoutDirection="rtl"
            android:button="@drawable/selector_radiobutton_post_report"
            android:textColor="@drawable/selector_radiobutton_post_report_text" />
        <RadioButton
            android:id="@+id/radiobutton_post_report_reason_2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="18dp"
            android:text="@string/post_report_reason_2"
            android:textSize="14dp"
            android:layoutDirection="rtl"
            android:button="@drawable/selector_radiobutton_post_report"
            android:textColor="@drawable/selector_radiobutton_post_report_text" />
        <RadioButton
            android:id="@+id/radiobutton_post_report_reason_3"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="18dp"
            android:text="@string/post_report_reason_3"
            android:textSize="14dp"
            android:layoutDirection="rtl"
            android:button="@drawable/selector_radiobutton_post_report"
            android:textColor="@drawable/selector_radiobutton_post_report_text" />
        <RadioButton
            android:id="@+id/radiobutton_post_report_reason_4"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="18dp"
            android:text="@string/post_report_reason_4"
            android:textSize="14dp"
            android:layoutDirection="rtl"
            android:button="@drawable/selector_radiobutton_post_report"
            android:textColor="@drawable/selector_radiobutton_post_report_text" />
        <RadioButton
            android:id="@+id/radiobutton_post_report_reason_5"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="18dp"
            android:text="@string/post_report_reason_5"
            android:textSize="14dp"
            android:layoutDirection="rtl"
            android:button="@drawable/selector_radiobutton_post_report"
            android:textColor="@drawable/selector_radiobutton_post_report_text" />
        <RadioButton
            android:id="@+id/radiobutton_post_report_reason_6"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="18dp"
            android:text="@string/post_report_reason_6"
            android:textSize="14dp"
            android:layoutDirection="rtl"
            android:button="@drawable/selector_radiobutton_post_report"
            android:textColor="@drawable/selector_radiobutton_post_report_text" />
        <RadioButton
            android:id="@+id/radiobutton_post_report_reason_7"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="18dp"
            android:text="@string/post_report_reason_7"
            android:textSize="14dp"
            android:layoutDirection="rtl"
            android:button="@drawable/selector_radiobutton_post_report"
            android:textColor="@drawable/selector_radiobutton_post_report_text" />
        <RadioButton
            android:id="@+id/radiobutton_post_report_reason_other"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="18dp"
            android:text="@string/post_report_reason_other"
            android:textSize="14dp"
            android:layoutDirection="rtl"
            android:button="@drawable/selector_radiobutton_post_report"
            android:textColor="@drawable/selector_radiobutton_post_report_text" />
    </RadioGroup>
    
    <EditText
        android:id="@+id/et_post_report_reason_other"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginHorizontal="19dp"
        app:layout_constraintTop_toBottomOf="@id/radiogroup_post_report_reason"
        android:background="@drawable/selector_edittext_post_report"
        android:visibility="invisible"
        android:gravity="top"
        android:padding="11dp"
        android:textSize="13dp"
        android:maxLength="100"
        android:inputType="textMultiLine"
        android:hint="@string/post_report_reason_other_hint"
        android:textColorHint="@color/gray_4_D3D2D2"
        tools:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_post_report"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_margin="18dp"
        android:text="@string/post_report_button"
        android:textColor="@color/white_FFFFFF"
        android:background="@drawable/selector_button_default_green"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>