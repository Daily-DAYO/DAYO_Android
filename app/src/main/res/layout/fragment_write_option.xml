<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_bottom_sheet_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".write.WriteOptionFragment">

    <ImageView
        android:id="@+id/img_write_option_swipe_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_swipe_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_write_option_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_write_option_swipe_top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="18dp">
        <TextView
            android:id="@+id/tv_write_option_title_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_option_title_folder"
            android:textSize="13dp"
            android:textColor="@color/black_000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/tv_write_option_icon_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_sign_light_gray"
            app:layout_constraintTop_toTopOf="@id/tv_write_option_title_folder"
            app:layout_constraintBottom_toBottomOf="@id/tv_write_option_title_folder"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/tv_write_option_description_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_option_description_folder"
            android:textSize="13dp"
            android:textColor="@color/gray_3_9C9C9C"
            app:layout_constraintTop_toTopOf="@id/tv_write_option_title_folder"
            app:layout_constraintBottom_toBottomOf="@id/tv_write_option_title_folder"
            app:layout_constraintRight_toLeftOf="@id/tv_write_option_icon_folder"
            android:layout_marginRight="25dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view_folder_horizontal_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/gray_4_D3D2D2"
        app:layout_constraintTop_toBottomOf="@id/layout_write_option_folder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_write_option_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_folder_horizontal_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="18dp"
        android:layout_marginHorizontal="18dp">
        <TextView
            android:id="@+id/tv_write_option_title_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_option_title_private"
            android:textSize="13dp"
            android:textColor="@color/black_000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <RadioGroup
            android:id="@+id/radiogroup_write_option_description_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <RadioButton
                android:id="@+id/radiobutton_write_option_description_private_all"
                android:layout_width="73dp"
                android:layout_height="24dp"
                android:text="@string/write_option_description_private_all"
                android:textSize="10dp"
                android:textColor="@drawable/selector_button_write_option_private_text"
                android:textAlignment="center"
                android:background="@drawable/selector_button_write_option_private"
                android:button="@null"
                android:layout_marginRight="9dp"/>
            <RadioButton
                android:checked="true"
                android:id="@+id/radiobutton_write_option_description_private_following"
                android:layout_width="73dp"
                android:layout_height="24dp"
                android:text="@string/write_option_description_private_following"
                android:textSize="10dp"
                android:textColor="@drawable/selector_button_write_option_private_text"
                android:textAlignment="center"
                android:background="@drawable/selector_button_write_option_private"
                android:button="@null"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:id="@+id/radiobutton_write_option_description_private_only_me"
                android:layout_width="73dp"
                android:layout_height="24dp"
                android:text="@string/write_option_description_private_only_me"
                android:textSize="10dp"
                android:textColor="@drawable/selector_button_write_option_private_text"
                android:textAlignment="center"
                android:background="@drawable/selector_button_write_option_private"
                android:button="@null"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view_private_horizontal_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/gray_4_D3D2D2"
        app:layout_constraintTop_toBottomOf="@id/layout_write_option_private"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_write_option_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_private_horizontal_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="18dp"
        android:layout_marginHorizontal="18dp">
        <TextView
            android:id="@+id/tv_write_option_title_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_option_title_tag"
            android:textSize="13dp"
            android:textColor="@color/black_000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_write_option_description_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/write_option_description_tag"
            android:textSize="13dp"
            android:textColorHint="@color/gray_4_D3D2D2"
            android:visibility="visible"
            android:breakStrategy="high_quality"
            android:gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_write_option_title_tag"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="30dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_write_option_description_tag_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_write_option_title_tag"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_option_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_default_green"
        android:text="@string/confirm"
        android:textSize="16dp"
        android:textColor="@color/white_FFFFFF"
        style="@style/Animation.Design.BottomSheetDialog"
        app:layout_constraintTop_toBottomOf="@id/layout_write_option_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>