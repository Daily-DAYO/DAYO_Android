<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_post_comment_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/pink_F34D7A"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:enabled="false"
                android:text="@string/delete"
                android:textSize="12dp"
                android:textColor="@color/white_FFFFFF"
                android:gravity="end|center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="27dp"
                android:paddingStart="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_post_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingBottom="14dp">
            <View
                android:id="@+id/view_post_comment_list_horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_4_D3D2D2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/img_post_comment_user_profile"
                android:layout_width="31dp"
                android:layout_height="31dp"
                app:layout_constraintTop_toBottomOf="@+id/view_post_comment_list_horizontal_line"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginStart="18dp"
                tools:src="@drawable/ic_dayo_grayscale"/>
            <TextView
                android:id="@+id/tv_post_comment_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/gray_1_313131"
                app:layout_constraintTop_toTopOf="@id/img_post_comment_user_profile"
                app:layout_constraintStart_toEndOf="@id/img_post_comment_user_profile"
                android:layout_marginStart="7dp"
                tools:text="Nickname"/>
            <TextView
                android:id="@+id/tv_post_comment_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/gray_1_313131"
                app:layout_constraintTop_toBottomOf="@id/tv_post_comment_user_nickname"
                app:layout_constraintStart_toEndOf="@id/img_post_comment_user_profile"
                app:layout_constraintEnd_toEndOf="@id/tv_post_comment_write_time"
                android:layout_marginTop="6dp"
                android:layout_marginStart="7dp"
                tools:text="저도 저렇게 꾸미고 싶어요. 오늘은 단팥 붕어빵을 먹었거든요. 다이어리에 적고 싶네요....."/>

            <TextView
                android:id="@+id/tv_post_comment_write_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:textColor="@color/gray_3_9C9C9C"
                app:layout_constraintTop_toTopOf="@id/img_post_comment_user_profile"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="17dp"
                tools:text="2일 전"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>