<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="comment"
            type="com.daily.dayo.post.model.PostCommentContent" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="16dp">
        <View
            android:id="@+id/view_post_comment_list_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_7_F6F6F6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_post_comment_user_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_4_D3D2D2"
            android:src="@drawable/ic_user_profile_image_empty"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/view_post_comment_list_horizontal_line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            tools:src="@drawable/ic_dayo_grayscale" />
        <TextView
            android:id="@+id/tv_post_comment_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{comment.nickname}"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="@id/img_post_comment_user_profile"
            app:layout_constraintStart_toEndOf="@id/img_post_comment_user_profile"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            tools:text="Nickname"/>
        <TextView
            android:id="@+id/tv_post_comment_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{comment.contents}"
            android:textSize="12dp"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toBottomOf="@id/tv_post_comment_user_nickname"
            app:layout_constraintStart_toStartOf="@id/tv_post_comment_user_nickname"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="39dp"
            tools:text="저도 저렇게 꾸미고 싶어요. 오늘은 단팥 붕어빵을 먹었거든요. 다이어리에 적고 싶네요....."/>
        <TextView
            android:id="@+id/tv_post_comment_write_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{comment.createTime}"
            android:textSize="9dp"
            android:textColor="@color/gray_3_9C9C9C"
            app:layout_constraintTop_toTopOf="@id/tv_post_comment_user_nickname"
            app:layout_constraintBottom_toBottomOf="@id/tv_post_comment_user_nickname"
            app:layout_constraintStart_toEndOf="@id/tv_post_comment_user_nickname"
            android:layout_marginStart="10dp"
            tools:text="2일 전"/>
        <ImageView
            android:id="@+id/img_post_comment_delete"
            android:layout_width="10dp"
            android:layout_height="11dp"
            android:src="@drawable/ic_x_sign"
            app:tint="@color/gray_1_313131"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>