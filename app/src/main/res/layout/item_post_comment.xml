<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="comment"
            type="daily.dayo.domain.model.Comment" />
        <variable
            name="commentCreateTime"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_FFFFFF"
        android:paddingBottom="16dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_post_comment_user_profile"
            android:layout_width="39dp"
            android:layout_height="39dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:src="@drawable/ic_user_profile_image_empty"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            tools:src="@drawable/ic_dayo_circle_grayscale" />
        <TextView
            android:id="@+id/tv_post_comment_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{comment.nickname}"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toTopOf="@id/img_post_comment_user_profile"
            app:layout_constraintBottom_toTopOf="@id/tv_post_comment_description"
            app:layout_constraintStart_toEndOf="@id/img_post_comment_user_profile"
            app:layout_constraintEnd_toStartOf="@id/tv_post_comment_write_time"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            tools:text="Nickname"/>
        <TextView
            android:id="@+id/tv_post_comment_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{comment.contents}"
            android:textSize="13dp"
            android:textColor="@color/gray_1_313131"
            app:layout_constraintTop_toBottomOf="@id/tv_post_comment_user_nickname"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_post_comment_user_nickname"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            tools:text="저도 저렇게 꾸미고 싶어요. 오늘은 단팥 붕어빵을 먹었거든요. 다이어리에 적고 싶네요....."/>
        <TextView
            android:id="@+id/tv_post_comment_write_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{commentCreateTime}"
            android:textSize="10dp"
            android:textColor="@color/gray_3_9FA5AE"
            app:layout_constraintTop_toTopOf="@id/tv_post_comment_user_nickname"
            app:layout_constraintBottom_toBottomOf="@id/tv_post_comment_user_nickname"
            app:layout_constraintStart_toEndOf="@id/tv_post_comment_user_nickname"
            android:layout_marginStart="6dp"
            tools:text="2일 전"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_post_comment_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" >
            <ImageView
                android:id="@+id/img_post_comment_delete"
                android:layout_width="10dp"
                android:layout_height="11dp"
                android:src="@drawable/ic_x_sign"
                app:tint="@color/gray_1_313131"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>