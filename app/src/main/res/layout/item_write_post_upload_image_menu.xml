<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/btn_upload_image"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_default_white"
        android:scaleType="center"
        android:src="@drawable/ic_upload_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_img_upload_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_img_delete_gray_5"
        android:clickable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/btn_upload_image"
        app:layout_constraintEnd_toEndOf="@id/btn_upload_image"
        app:layout_constraintStart_toEndOf="@id/btn_upload_image"
        app:layout_constraintTop_toTopOf="@id/btn_upload_image" />
</androidx.constraintlayout.widget.ConstraintLayout>