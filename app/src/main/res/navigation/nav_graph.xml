<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.daily.dayo.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_postFragment"
            app:destination="@id/PostFragment" />
        <action
            android:id="@+id/action_homeFragment_to_writeFragment"
            app:destination="@id/WriteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_otherProfileFragment"
            app:destination="@+id/OtherProfileFragment"/>
    </fragment>

    <fragment
        android:id="@+id/OtherProfileFragment"
        android:name="com.daily.dayo.profile.OtherProfileFragment"
        android:label="fragment_other_profile"
        tools:layout="@layout/fragment_other_profile">
        <argument
            android:name="memberId"
            app:argType="string"/>
        <action
            android:id="@+id/action_otherProfileFragment_to_FolderFragment"
            app:destination="@+id/FolderFragment"/>
        <action
            android:id="@+id/action_otherProfileFragment_to_followFragment"
            app:destination="@id/FollowFragment" />
    </fragment>

    <fragment
        android:id="@+id/SearchFragment"
        android:name="com.daily.dayo.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
    </fragment>

    <fragment
        android:id="@+id/FeedFragment"
        android:name="com.daily.dayo.feed.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_FeedFragment_to_SearchFragment"
            app:destination="@id/SearchFragment" />
        <action
            android:id="@+id/action_feedFragment_to_writeFragment"
            app:destination="@id/WriteFragment" />
    </fragment>

    <fragment
        android:id="@+id/WriteFragment"
        android:name="com.daily.dayo.write.WriteFragment"
        android:label="fragment_write"
        tools:layout="@layout/fragment_write">
        <action
            android:id="@+id/action_writeFragment_to_writeOptionFragment"
            app:destination="@id/WriteOptionFragment"/>
        <action
            android:id="@+id/action_writeFragment_to_postFragment"
            app:destination="@id/PostFragment"
            app:popUpTo="@id/WriteFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_writeFragment_to_writeImageOptionFragment"
            app:destination="@id/WriteImageOptionFragment"/>
    </fragment>
    <dialog
        android:id="@+id/WriteImageOptionFragment"
        android:name="com.daily.dayo.write.WriteImageOptionFragment"
        android:label="fragment_write_image_option"
        tools:layout="@layout/fragment_write_image_option">
    </dialog>

    <dialog
        android:id="@+id/WriteOptionFragment"
        android:name="com.daily.dayo.write.WriteOptionFragment"
        android:label="fragment_write_option"
        tools:layout="@layout/fragment_write_option">
        <argument
            android:name="postCategory"
            app:argType="string"/>
        <argument
            android:name="postContents"
            app:argType="string"/>
        <argument
            android:name="postImages"
            app:argType="string[]"/>
        <argument
            android:name="postTagList"
            app:argType="string[]"/>
        <argument
            android:name="postFolderId"
            app:argType="string"/>
        <argument
            android:name="postFolderName"
            app:argType="string"/>
        <action
            android:id="@+id/action_writeOptionFragment_to_writeTagFragment"
            app:destination="@id/WriteTagFragment" />
        <action
            android:id="@+id/action_writeOptionFragment_to_writeFolderFragment"
            app:destination="@id/WriteFolderFragment" />
    </dialog>

    <fragment
        android:id="@+id/WriteTagFragment"
        android:name="com.daily.dayo.write.WriteTagFragment"
        android:label="fragment_write_tag"
        tools:layout="@layout/fragment_write_tag">
        <argument
            android:name="postTagList"
            app:argType="string[]"/>
    </fragment>

    <fragment
        android:id="@+id/WriteFolderFragment"
        android:name="com.daily.dayo.write.WriteFolderFragment"
        android:label="fragment_write_folder"
        tools:layout="@layout/fragment_write_folder">
        <action
            android:id="@+id/action_writeFolderFragment_to_folderAddFragment"
            app:destination="@id/FolderAddFragment" />
    </fragment>

    <fragment
        android:id="@+id/FolderAddFragment"
        android:name="com.daily.dayo.write.WriteFolderAddFragment"
        android:label="fragment_write_add"
        tools:layout="@layout/fragment_write_folder_add">
    </fragment>

    <fragment
        android:id="@+id/PostFragment"
        android:name="com.daily.dayo.post.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="nickname"
            app:argType="string" />
        <action
            android:id="@+id/action_postFragment_to_postOptionFragment"
            app:destination="@id/PostOptionFragment"/>
        <action
            android:id="@+id/action_postFragment_to_postOptionMineFragment"
            app:destination="@id/PostOptionMineFragment"/>
    </fragment>
    <dialog
        android:id="@+id/PostOptionFragment"
        android:name="com.daily.dayo.post.PostOptionFragment"
        android:label="fragment_post_option"
        tools:layout="@layout/fragment_post_option">
        <argument
            android:name="id"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/PostOptionMineFragment"
        android:name="com.daily.dayo.post.PostOptionMineFragment"
        android:label="fragment_post_option_mine"
        tools:layout="@layout/fragment_post_option_mine">
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_postOptionMineFragment_to_HomeFragment"
            app:destination="@+id/HomeFragment"
            app:popUpTo="@id/PostFragment"
            app:popUpToInclusive="true"/>
    </dialog>

    <fragment
        android:id="@+id/MyProfileFragment"
        android:name="com.daily.dayo.profile.MyProfileFragment"
        android:label="fragment_my_profile"
        tools:layout="@layout/fragment_my_profile">
        <action
            android:id="@+id/action_myProfileFragment_to_writeFragment"
            app:destination="@id/WriteFragment" />
        <action
            android:id="@+id/action_myProfileFragment_to_followFragment"
            app:destination="@id/FollowFragment" />
        <action
            android:id="@+id/action_myProfileFragment_to_myProfileEditFragment"
            app:destination="@id/MyProfileEditFragment" />
        <action
            android:id="@+id/action_myProfileFragment_to_myProfileOptionFragment"
            app:destination="@id/MyProfileOptionFragment"/>
        <action
            android:id="@+id/action_myProfileFragment_to_folderFragment"
            app:destination="@+id/FolderFragment"/>
    </fragment>

    <fragment
        android:id="@+id/FolderFragment"
        android:name="com.daily.dayo.profile.FolderFragment"
        android:label="fragment_folder"
        tools:layout="@layout/fragment_folder">

        <argument
            android:name="folderId"
            app:argType="integer" />
        <action
            android:id="@+id/action_folderFragment_to_folderOptionFragment"
            app:destination="@id/FolderOptionFragment" />
        <action
            android:id="@+id/action_folderFragment_to_postFragment"
            app:destination="@id/PostFragment" />

    </fragment>

    <fragment
        android:id="@+id/FolderEditFragment"
        android:name="com.daily.dayo.profile.FolderEditFragment"
        android:label="fragment_folder_edit"
        tools:layout="@layout/fragment_folder_setting_add">
        <argument
            android:name="folderId"
            app:argType="integer" />
    </fragment>

    <dialog
        android:id="@+id/FolderOptionFragment"
        android:name="com.daily.dayo.profile.FolderOptionFragment"
        android:label="fragment_folder_option"
        tools:layout="@layout/fragment_folder_option">
        <argument
            android:name="folderId"
            app:argType="integer" />
        <action
            android:id="@+id/action_folderOptionFragment_to_myProfileFragment"
            app:destination="@+id/MyProfileFragment" />
        <action
            android:id="@+id/action_folderOptionFragment_to_folderEditFragment"
            app:destination="@+id/FolderEditFragment"/>
    </dialog>

    <dialog
        android:id="@+id/MyProfileOptionFragment"
        android:name="com.daily.dayo.profile.MyProfileOptionFragment"
        android:label="fragment_my_profile_option"
        tools:layout="@layout/fragment_my_profile_option">

        <action
            android:id="@+id/action_myProfileOptionFragment_to_folderSettingFragment"
            app:destination="@id/FolderSettingFragment" />

        <action
            android:id="@+id/action_myProfileOptionFragment_to_myProfileEditFragment"
            app:destination="@+id/MyProfileEditFragment"/>
    </dialog>

    <fragment
        android:id="@+id/FolderSettingFragment"
        android:name="com.daily.dayo.profile.FolderSettingFragment"
        android:label="fragment_folder_setting"
        tools:layout="@layout/fragment_folder_setting">
        <action android:id="@+id/action_folderSettingFragment_to_folderSettingAddFragment"
            app:destination="@id/FolderSettingAddFragment" />
    </fragment>

    <fragment
        android:id="@+id/FolderSettingAddFragment"
        android:name="com.daily.dayo.profile.FolderSettingAddFragment"
        tools:layout="@layout/fragment_folder_setting_add">
    </fragment>

    <fragment
        android:id="@+id/MyProfileEditFragment"
        android:name="com.daily.dayo.profile.MyProfileEditFragment"
        android:label="fragment_my_profile_edit"
        tools:layout="@layout/fragment_my_profile_edit">
        <action
            android:id="@+id/action_myProfileEditFragment_to_myProfileEditImageOptionFragment"
            app:destination="@id/MyProfileEditImageOptionFragment"/>
    </fragment>
    <dialog
        android:id="@+id/MyProfileEditImageOptionFragment"
        android:name="com.daily.dayo.profile.MyProfileEditImageOptionFragment"
        android:label="fragment_my_profile_edit_image_option"
        tools:layout="@layout/fragment_my_profile_edit_image_option">
    </dialog>

    <fragment
        android:id="@+id/FollowFragment"
        android:name="com.daily.dayo.follow.FollowFragment"
        android:label="fragment_follow"
        tools:layout="@layout/fragment_follow">
        <argument
            android:name="memberId"
            app:argType="string"/>
        <argument
            android:name="nickname"
            app:argType="string"/>
        <action
            android:id="@+id/action_followFragment_to_otherProfileFragment"
            app:destination="@+id/OtherProfileFragment"/>
        <action
            android:id="@+id/action_followFragment_to_myProfileFragment"
            app:destination="@+id/MyProfileFragment"/>
    </fragment>

</navigation>