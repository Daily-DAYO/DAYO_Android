<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.daily.dayo.presentation.fragment.account.signin.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_loginEmailFragment"
            app:destination="@+id/LoginEmailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/LoginEmailFragment"
        android:name="com.daily.dayo.presentation.fragment.account.signin.LoginEmailFragment"
        android:label="fragment_login_email"
        tools:layout="@layout/fragment_login_email">
        <action
            android:id="@+id/action_loginEmailFragment_to_findAccountPasswordCheckEmail"
            app:destination="@+id/FindAccountPasswordCheckEmail"/>
        <action
            android:id="@+id/action_loginEmailFragment_to_signupEmailSetEmailAddressFragment"
            app:destination="@+id/SignupEmailSetEmailAddressFragment"/>
    </fragment>

    <fragment
        android:id="@+id/FindAccountPasswordCheckEmail"
        android:name="com.daily.dayo.presentation.fragment.setting.findAccount.FindAccountPasswordCheckEmailFragment"
        android:label="fragment_find_account_password_check_email"
        tools:layout="@layout/fragment_find_account_password_check_email">
        <action
            android:id="@+id/action_findAccountPasswordCheckEmailFragment_to_findAccountPasswordCheckEmailCertificateFragment"
            app:destination="@+id/FindAccountPasswordCheckEmailCertificateFragment"/>
    </fragment>

    <fragment
        android:id="@+id/FindAccountPasswordCheckEmailCertificateFragment"
        android:name="com.daily.dayo.presentation.fragment.setting.findAccount.FindAccountPasswordCheckEmailCertificateFragment"
        android:label="fragment_find_account_password_check_email_certificate"
        tools:layout="@layout/fragment_find_account_password_check_email_certificate">
        <argument
            android:name="email"
            app:argType="string"/>

        <action
            android:id="@+id/action_findAccountPasswordCheckEmailCertificateFragment_to_findAccountPasswordNewPasswordFragment"
            app:destination="@+id/FindAccountPasswordNewPasswordFragment"/>
    </fragment>

    <fragment
        android:id="@+id/FindAccountPasswordNewPasswordFragment"
        android:name="com.daily.dayo.presentation.fragment.setting.findAccount.FindAccountPasswordNewPasswordFragment"
        android:label="fragment_find_account_password_new_password"
        tools:layout="@layout/fragment_find_account_password_new_password">
        <argument
            android:name="email"
            app:argType="string"/>

        <action
            android:id="@+id/action_findAccountPasswordNewPasswordFragment_to_findAccountPasswordNewPasswordConfirmationFragment"
            app:destination="@+id/FindAccountPasswordNewPasswordConfirmationFragment"/>
    </fragment>

    <fragment
        android:id="@+id/FindAccountPasswordNewPasswordConfirmationFragment"
        android:name="com.daily.dayo.presentation.fragment.setting.findAccount.FindAccountPasswordNewPasswordConfirmationFragment"
        android:label="fragment_find_account_password_new_password_confirmation"
        tools:layout="@layout/fragment_find_account_password_new_password_confirmation">
        <argument
            android:name="email"
            app:argType="string"/>
        <argument
            android:name="password"
            app:argType="string"/>
        <action
            android:id="@+id/action_findAccountPasswordNewPasswordConfirmationFragment_to_findAccountPasswordCompleteFragment"
            app:destination="@+id/FindAccountPasswordCompleteFragment"
            app:popUpTo="@id/LoginEmailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/FindAccountPasswordCompleteFragment"
        android:name="com.daily.dayo.presentation.fragment.setting.findAccount.FindAccountPasswordCompleteFragment"
        android:label="fragment_find_account_password_complete"
        tools:layout="@layout/fragment_find_account_password_complete">
        <action
            android:id="@+id/action_findAccountPasswordCompleteFragment_to_loginEmailFragment"
            app:destination="@+id/LoginEmailFragment"
            app:popUpTo="@id/LoginEmailFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/SignupEmailSetEmailAddressFragment"
        android:name="com.daily.dayo.presentation.fragment.account.signup.SignupEmailSetEmailAddressFragment"
        android:label="fragment_signup_email_set_email_address"
        tools:layout="@layout/fragment_signup_email_set_email_address">
        <action
            android:id="@+id/action_signupEmailSetEmailAddressFragment_to_signupEmailSetEmailAddressCertificateFragment"
            app:destination="@+id/SignupEmailSetEmailAddressCertificateFragment"/>
    </fragment>

    <fragment
        android:id="@+id/SignupEmailSetEmailAddressCertificateFragment"
        android:name="com.daily.dayo.presentation.fragment.account.signup.SignupEmailSetEmailAddressCertificateFragment"
        android:label="fragment_signup_email_set_email_address_certificate"
        tools:layout="@layout/fragment_signup_email_set_email_address_certificate">
        <argument
            android:name="email"
            app:argType="string"/>
        <action
            android:id="@+id/action_signupEmailSetEmailAddressCertificateFragment_to_signupEmailSetPasswordFragment"
            app:destination="@+id/SignupEmailSetPasswordFragment"/>
    </fragment>

    <fragment
        android:id="@+id/SignupEmailSetPasswordFragment"
        android:name="com.daily.dayo.presentation.fragment.account.signup.SignupEmailSetPasswordFragment"
        android:label="fragment_signup_email_set_password"
        tools:layout="@layout/fragment_signup_email_set_password">
        <argument
            android:name="email"
            app:argType="string"/>
        <action
            android:id="@+id/action_signupEmailSetPasswordFragment_to_signupEmailSetPasswordConfirmationFragment"
            app:destination="@+id/SignupEmailSetPasswordConfirmationFragment"/>
    </fragment>

    <fragment
        android:id="@+id/SignupEmailSetPasswordConfirmationFragment"
        android:name="com.daily.dayo.presentation.fragment.account.signup.SignupEmailSetPasswordConfirmationFragment"
        android:label="fragment_signup_email_set_password_confirmation"
        tools:layout="@layout/fragment_signup_email_set_password_confirmation">
        <argument
            android:name="email"
            app:argType="string"/>
        <argument
            android:name="password"
            app:argType="string"/>
        <action
            android:id="@+id/action_signupEmailSetPasswordConfirmationFragment_to_signupEmailSetProfileFragment"
            app:destination="@+id/SignupEmailSetProfileFragment"/>
    </fragment>

    <fragment
        android:id="@+id/SignupEmailSetProfileFragment"
        android:name="com.daily.dayo.presentation.fragment.account.signup.SignupEmailSetProfileFragment"
        android:label="fragment_signup_email_set_profile"
        tools:layout="@layout/fragment_signup_email_set_profile">
        <argument
            android:name="email"
            app:argType="string"/>
        <argument
            android:name="password"
            app:argType="string"/>
        <action
            android:id="@+id/action_signupEmailSetProfileFragment_to_signupEmailSetProfileImageOptionFragment"
            app:destination="@id/SignupEmailSetProfileImageOptionFragment"/>
        <action
            android:id="@+id/action_signupEmailSetProfileFragment_to_signupEmailCompleteFragment"
            app:destination="@id/SignupEmailCompleteFragment"
            app:popUpTo="@id/LoginFragment"/>
    </fragment>
    <dialog
        android:id="@+id/SignupEmailSetProfileImageOptionFragment"
        android:name="com.daily.dayo.presentation.fragment.account.signup.SignupEmailSetProfileImageOptionFragment"
        android:label="signup_email_set_profile_image_option"
        tools:layout="@layout/fragment_signup_email_set_profile_image_option">
    </dialog>

    <fragment
        android:id="@+id/SignupEmailCompleteFragment"
        android:name="com.daily.dayo.presentation.fragment.account.signup.SignupEmailCompleteFragment"
        android:label="fragment_signup_email_complete"
        tools:layout="@layout/fragment_signup_email_complete">
        <argument
            android:name="nickname"
            app:argType="string"/>
    </fragment>
</navigation>