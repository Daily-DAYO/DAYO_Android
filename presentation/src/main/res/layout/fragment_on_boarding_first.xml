<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_onboarding_first"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:lottie_rawRes="@raw/onboarding_first"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding_first_message"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_first_message"
        android:textSize="17dp"
        android:textColor="@color/gray_1_313131"
        android:gravity="center"
        android:bufferType="spannable"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@id/lottie_onboarding_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>