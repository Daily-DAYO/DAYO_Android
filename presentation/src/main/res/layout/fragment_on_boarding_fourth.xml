<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_onboarding_fourth_message_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_fourth_message_1"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/gray_1_313131"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_onboarding_fourth_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp"
            android:src="@drawable/ic_dayo_logo_text"/>

        <TextView
            android:id="@+id/tv_onboarding_fourth_message_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_fourth_message_2"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/gray_1_313131"/>

    </LinearLayout>
</LinearLayout>